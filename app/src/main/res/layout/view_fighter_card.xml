<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/fighter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Player 1" />

    <com.catto.rfidreader.SignatureView
        android:id="@+id/fighter_signature"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/fighter_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        tools:text="HP: 120 | ATK: 25 | DEF: 15" />

    <Button
        android:id="@+id/select_fighter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/button_select_card"
        style="?attr/materialButtonOutlinedStyle"/>

</LinearLayout>
